# .env.example
# Kopieren Sie diese Datei als .env und passen Sie die Werte an Ihre Bed√ºrfnisse an

# API-Keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx

# LLM Konfiguration
# Optionen: openai, anthropic
LLM_PROVIDER=anthropic
# Andere Optionen: claude-3-opus, claude-3-7-sonnet
ANTHROPIC_MODEL=claude-3-7-sonnet-20250219

# Verzeichnisse
PDF_DIR=./pdfs
INDEX_DIR=./index_storage

# LlamaIndex-Einstellungen
CHUNK_SIZE=512
CHUNK_OVERLAP=50
EMBEDDING_MODEL=intfloat/multilingual-e5-large

# PDF-Verarbeitungseinstellungen
# 0 = Alle PDFs verarbeiten
MAX_PDFS=0